<h1>Create a Post</h1>

<% if flash.now[:error] %>
	<% flash.now[:error].each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>

<%= form_for @post do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %><br>

	<%= f.label :content %>
	<%= f.text_field :content %><br>

	<%= f.label :blogger_id %>
	<%= f.collection_select :blogger_id, Blogger.all, :id, :name %><br>

	<%= f.label :destination_id %>
	<%= f.collection_select :destination_id, Destination.all, :id, :name %><br>

	<%= f.submit %>
<% end %>