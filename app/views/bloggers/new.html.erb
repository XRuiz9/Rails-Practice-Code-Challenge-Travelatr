<h1>Create a New Blogger</h1>

<% if flash.now[:error] %>
	<% flash.now[:error].each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>

<%= form_for (Blogger.new) do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %><br>

	<%= f.label :bio %>
	<%= f.text_area :bio %><br>

	<%= f.label :age %>
	<%= f.number_field :age %>

	<%= f.submit %>
<% end %>